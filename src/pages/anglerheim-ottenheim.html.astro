---
import Site from "../layouts/Site.astro";
import { APP } from "../config/app";
---

<Site title={`Anglerheim Ottenheim • ${APP.name}`} description="Infos zum Anglerheim Ottenheim und Kartenansicht.">
  <section class="card">
    <div class="card__body">
      <h1>Anglerheim Ottenheim</h1>
      <p class="small">Die Öffnungszeiten werden direkt über Google Maps gepflegt.</p>
      <p>
        <a href="https://maps.google.com/?q=Gastst%C3%A4tte%20Anglerheim%20Ottenheim" target="_blank" rel="noopener noreferrer">
          Aktuelle Öffnungszeiten in Google Maps ansehen
        </a>
      </p>
    </div>
  </section>

  <section class="card">
    <div class="card__body">
      <h2>Karte</h2>
      <div class="external-media-lock" data-consent-placeholder>
        <p class="small">Google Maps wird erst nach Einwilligung zu externen Medien geladen.</p>
        <button type="button" class="feed-btn feed-btn--ghost" data-open-consent-settings>Datenschutz-Einstellungen</button>
      </div>
      <iframe
        data-consent-category="external_media"
        data-consent-src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2649.7313505729508!2d7.744252616244681!3d48.384896741881!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4791355a6b6e6c27%3A0xe4d968a9d2c7c224!2sGastst%C3%A4tte%20Anglerheim%20Ottenheim!5e0!3m2!1sde!2sde!4v1673529418648!5m2!1sde!2sde"
        style="border:0; height: 420px; width: 100%; border-radius: 12px;"
        allowfullscreen
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </section>

  <section class="card">
    <div class="card__body">
      <h2>Adresse</h2>
      <p>Georgenstraße 33<br />77963 Schwanau</p>
    </div>
  </section>
</Site>
