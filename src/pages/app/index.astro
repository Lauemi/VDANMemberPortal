---
import Site from "../../layouts/Site.astro";
import { APP } from "../../config/app";
---

<Site title={`App • ${APP.name}`} description="Memberbereich." robots="noindex">
  <section class="card">
    <div class="card__body app-portal">
      <h1>Memberportal</h1>
      <p class="small">Wähle eine App.</p>

      <div class="app-grid">
        <a class="app-tile" href="/app/fangliste/">
          <span class="app-tile__icon">FL</span>
          <span class="app-tile__title">Fangliste</span>
          <span class="small">Fänge erfassen</span>
        </a>

        <a class="app-tile" href="/app/arbeitseinsaetze/">
          <span class="app-tile__icon">AS</span>
          <span class="app-tile__title">Arbeitseinsätze</span>
          <span class="small">Anmelden & Check-in</span>
        </a>

        <a class="app-tile hidden" data-manager-only hidden href="/app/arbeitseinsaetze/cockpit/">
          <span class="app-tile__icon">AC</span>
          <span class="app-tile__title">AS Cockpit</span>
          <span class="small">Freigaben & History</span>
        </a>

        <a class="app-tile hidden" data-manager-only hidden href="/app/termine/cockpit/">
          <span class="app-tile__icon">TC</span>
          <span class="app-tile__title">Termine Cockpit</span>
          <span class="small">Termine pflegen</span>
        </a>
      </div>
    </div>
  </section>
</Site>
