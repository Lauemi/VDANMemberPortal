---
import Site from "../layouts/Site.astro";
import { APP } from "../config/app";
---

<Site title={`Dokumente • ${APP.name}`} description="Öffentliche Vereinsdokumente">
  <section class="card" id="top">
    <div class="card__body">
      <h1>Dokumente</h1>
 
      <p id="downloadsMsg" class="small" aria-live="polite"></p>

      <nav id="doc-menu" aria-label="Dokument-Kategorien">
        <ul id="document-menu"></ul>
      </nav>

      <div id="documentsList"></div>
    </div>
  </section>

  <style>
    #doc-menu {
      margin: 14px 0 22px;
      border: 1px solid var(--line);
      border-radius: var(--radius);
      padding: 10px 12px;
      background: rgba(255, 255, 255, .03);
    }
    #document-menu {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }
    #document-menu li a {
      display: inline-flex;
      align-items: center;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid var(--line);
      text-decoration: none;
      color: var(--text);
      font-size: 0.9rem;
    }
  </style>

  <script src="/js/downloads-public.js" defer></script>
</Site>
