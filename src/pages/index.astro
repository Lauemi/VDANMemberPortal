            <li data-member-only class="hidden" hidden><a href="/app/">Mitgliederbereich</a></li>
          </ul>
        </section>
      </nav>
    </div>

    <main>
      <div id="middle">
        <section class="feed-shell">
          <div class="feed-toolbar">
            <div>
              <h1>Neuigkeiten</h1>
              <p class="small">Aktuelle Beiträge aus dem Verein als Feed.</p>
            </div>
            <button id="feedNewPost" class="feed-btn hidden" type="button" hidden>Neuer Post</button>
          </div>

          <div id="feedComposerHost"></div>
          <div id="feedList" class="feed-list"></div>
          <p id="feedMsg" class="small" aria-live="polite"></p>
        </section>
      </div>
    </main>

    <footer>
      <ul class="footerleft">
        <li><a href="kontakt.html">Kontakt</a></li>
        <li><a href="termine.html">Aktuelles</a></li>
      </ul>
      <ul class="footermiddle">
        <li><a href="#top">Seitenanfang</a></li>
        <li id="copyright">&#169; Michael Lauenroth</li>
      </ul>
      <ul class="right">
        <li><a href="index.html">Startseite</a></li>
        <li><a href="datenschutz.html">Datenschutz</a></li>
        <li><a href="impressum.html">Impressum</a></li>
        <li><a href="downloads.html">Downloads</a></li>
        <li data-guest-only><a href="/login/">Login</a></li>
        <li data-member-only class="hidden" hidden><a href="/app/">Mitgliederbereich</a></li>
      </ul>
    </footer>
  </div>

  <script src="/js/member-auth.js" defer></script>
  <script src="/js/ui-session.js" defer></script>
  <script src="/js/member-entry.js" defer></script>
  <script src="/js/home-feed.js" defer></script>
