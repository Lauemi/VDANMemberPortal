---
const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL ?? "";
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY ?? "";
---

<!DOCTYPE html>
<html lang="de">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="style.css">
  <link rel="stylesheet" href="menu.css">
  <link rel="stylesheet" href="layout.css">
  <link rel="shortcut icon" href="icon.png" type="image/xicon">
  <title>VDAN-Ottenheim</title>
  <script define:vars={{ supabaseUrl, supabaseKey }}>
    window.__APP_SUPABASE_URL = supabaseUrl;
    window.__APP_SUPABASE_KEY = supabaseKey;
  </script>
</head>

<body id="top">
  <div class="layout">
    <a href="index.html"><img class="logo" src="./Bilder/logo300x300.png" alt="VDAN Logo"></a>
    <div id="heading">
      <nav>
        <section class="top-nav">
          <input id="menu-toggle" type="checkbox" />
          <label class="menu-button-container" for="menu-toggle">
            <div class="menu-button"></div>
          </label>
          <ul class="menu">
            <li><a href="index.html">Startseite</a></li>
            <li><a href="https://vdan-vereisnshop.myspreadshop.de/" target="_blank">Shop</a></li>
