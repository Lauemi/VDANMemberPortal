---
import Site from "../layouts/Site.astro";
import { APP } from "../config/app";
---

<Site title={`Termine • ${APP.name}`} description="Vereinstermine und Arbeitseinsaetze" robots="index">
  <section class="card">
    <div class="card__body">
      <div class="catch-table-toolbar">
        <h1>Termine</h1>
      </div>
      <p class="small">Alle kommenden Termine und Arbeitseinsätze in einer gemeinsamen Ansicht.</p>
      <p id="termineMsg" class="small" aria-live="polite"></p>
      <div id="termineList" class="grid"></div>
    </div>
  </section>

  <script src="/js/termine-merged.js" defer></script>
</Site>
