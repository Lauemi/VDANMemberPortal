    },
    {
        datum: '2025-08-15',
        beschreibung: 'Zeltlager Jungangler'
    },
    {
        datum: '2025-08-16',
        beschreibung: 'Zeltlager Jungangler'
    },
    {
        datum: '2025-08-17',
        beschreibung: 'Zeltlager Jungangler'
    }
];

                        // Suchen des <p>-Elements
                        const pElement = document.getElementById('terminliste');

                        // Durchlaufen der Termin-Objekte und Finden von zukünftigen Terminen
                        let zukuenftigeTermine = '';
                        for (let termin of termine) {
                            const datum = new Date(termin.datum)
                
                            if (datum > new Date()) {
                                const datumText = datum.toLocaleDateString('de-DE', { day: '2-digit', month: 'long', year: 'numeric', weekday:"long" });
                                
                                zukuenftigeTermine += ` ${datumText}  ${termin.beschreibung}<hr id=trenner><br> `;
                                
                            }
                            
                        }



                        // Setzen des Textinhalts des <p>-Elements auf die zukünftigen Termine
                        pElement.innerHTML = zukuenftigeTermine;

                    </script>
                   
                    
