---
import Site from "../layouts/Site.astro";
import { APP } from "../config/app";
---

<Site title={`Veranstaltungen • ${APP.name}`} description="Bilder und Eindrücke aus Veranstaltungen.">
  <section class="card">
    <div class="card__body">
      <h1>Veranstaltungen</h1>
      <p class="small">Rückblicke aus dem Vereinsleben.</p>
      <div class="documents-grid">
        <article class="card">
          <div class="card__body">
            <h3>Flammlachs</h3>
            <img src="/galery/Flammlachs/20191102_154744.jpg" alt="Flammlachs" style="width:100%;border-radius:10px;" loading="lazy" />
          </div>
        </article>
        <article class="card">
          <div class="card__body">
            <h3>Angelfest</h3>
            <img src="/galery/Angelfest/IMG-20210627-WA0001.jpg" alt="Angelfest" style="width:100%;border-radius:10px;" loading="lazy" />
          </div>
        </article>
      </div>
    </div>
  </section>
</Site>
